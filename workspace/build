#
# $Id$
#
# This script can be used to build test programs for AWS, it supports XML/Ada
#
# usage: build <main>
#

if [ "$OS" = "Windows_NT" ]; then
   lopts=-lpoll
fi;

XMLADA=/opt/xmlada

gnatmake -O2 -g $1 -I. -I$XMLADA/include/xmlada -I../include -I../soap \
-I../src -I../ssl -I../xsrc -largs -L$XMLADA/lib -lxmlada_input_sources \
-lxmlada_dom -lxmlada_sax -lxmlada_unicode -L../lib -lz $lopts -bargs -E
