#
# $Id$
#
# This script can be used to build test programs for AWS, it supports XML/Ada
#
# usage: build <main>
#

if [ "$OS" = "Windows_NT" ]; then
   lopts=-lpoll
fi;

XMLADA=/opt/xmlada
AWS=..

gnatmake -O0 -g $1 -I. -I$XMLADA/include/xmlada -I$XMLADA/include/xmlada/obj \
-I$AWS/include -I$AWS/soap -I$AWS/src -I$AWS/ssl -I$AWS/xsrc \
-largs -L$XMLADA/lib -lxmlada_input_sources \
-lxmlada_dom -lxmlada_sax -lxmlada_unicode -L$AWS/lib -lz $lopts \
-lcrypto -lssl -bargs -E
