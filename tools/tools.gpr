with "../shared.gpr";
with "../include/include";
with "../src/src";
with "asis";

project Tools is

   for Languages use ("Ada", "Project file", "makefile");

   for Source_Dirs use (".", "../templates_parser/tools");

   for Main use ("awsres", "hotplug_password", "templates2ada", "webxref");

   case Shared.XMLAda is
      when "Installed" =>
         for Main use project'Main & ("wsdl2aws");
      when "Disabled" =>
         for Locally_Removed_Files use
           Project'Locally_Removed_Files & ("wsdl2aws.adb");
   end case;

   case Shared.ASIS is
      when "Installed" =>
         for Main use project'Main & ("ada2wsdl-main");
      when "Disabled" =>
         for Locally_Removed_Files use Project'Locally_Removed_Files &
           ("ada2wsdl.ads", "ada2wsdl.adb",
            "ada2wsdl-generator.ads", "ada2wsdl-generator.adb",
            "ada2wsdl-main.ads", "ada2wsdl-main.adb",
            "ada2wsdl-options.ads", "ada2wsdl-options.adb",
            "ada2wsdl-parser.ads", "ada2wsdl-parser.adb");
   end case;

   case Shared.Build is
      when "Debug" =>
         for Object_Dir use "../.build/debug/tools/obj";
         for Exec_Dir use "../.build/debug/tools";
      when "Release" =>
         for Object_Dir use "../.build/release/tools/obj";
         for Exec_Dir use "../.build/release/tools";
   end case;

   --------------
   -- Compiler --
   --------------

   package Compiler renames Shared.Compiler;

   ------------
   -- Binder --
   ------------

   package Binder renames Shared.Binder;

   -------------
   -- Builder --
   -------------

   package Builder renames Shared.Builder;

   ---------
   -- Ide --
   ---------

   package Ide renames Shared.Ide;

   ------------
   -- Linker --
   ------------

   package Linker is
      for Switches ("awsres.adb")   use Shared.ZLib;
      for Switches ("wsdl2aws.adb") use Shared.ZLib;
      for Switches ("ada2wsdl-main.adb") use Shared.ZLib & ("-lasis");
   end Linker;

end Tools;
