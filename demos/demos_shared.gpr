with "../shared";

project Demos_Shared is

   for Source_Dirs use ();

   --------------
   -- Compiler --
   --------------

   package Compiler is

      case Shared.Build is
         when "Debug" =>
            for Default_Switches ("Ada")
              use ("-g", "-gnat05", "-gnaty3abcefhiklmnoprt");

         when "Release" =>
            for Default_Switches ("Ada")
              use ("-O2", "-gnat05", "-gnatws", "-gnatn");
      end case;

   end Compiler;

   ------------
   -- Linker --
   ------------

   package Linker is

      COFF_Res := ("../" & Shared'Exec_Dir & "/lib/win32/aws.coff");

      WIN_OPT  := COFF_Res & Shared.ZLIB;
      UNX_OPT  := Shared.ZLIB;

      case Shared.OS is
         when "Windows_NT" =>
            for Default_Switches ("Ada") use WIN_OPT;

         when others =>
            for Default_Switches ("Ada") use UNX_OPT;
      end case;

      case Shared.Build is
         when "Release" =>
            for Default_Switches ("Ada") use
	      Linker'Default_Switches ("Ada") & ("-Wl,-s");
	 when others =>
            null;
      end case;

   end Linker;

end Demos_Shared;
